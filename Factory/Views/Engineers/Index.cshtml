@{
    Layout = "_Layout";
}

@using Factory.Models;

<h2>Engineers</h2>
<hr>

@if (Model.Count == 0)
{
    <p>No Engineers have been added in the database.</p>
}
@foreach (Engineer engineer in Model)
{
    <h4>@Html.ActionLink($"{engineer.Name}", "Details", new {id = engineer.EngineerId})</h4>
}

<hr>

<p>@Html.ActionLink("Add an Engineer", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>