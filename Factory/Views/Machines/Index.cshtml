@{
    Layout = "_Layout";
}

@using Factory.Models;

<h2>Machines</h2>
<hr>

@if (Model.Count == 0)
{
    <p>No Machines have been added in the database.</p>
}

@foreach (Machine machine in Model)
{
    <h4>@Html.ActionLink($"{machine.Name}", "Details", new {id = machine.MachineId})</h4>
}

<hr>

<p>@Html.ActionLink("Add a Machine", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>