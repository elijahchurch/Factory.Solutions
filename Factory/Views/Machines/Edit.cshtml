@{
    Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Update Machine Infomation</h2>
<hr>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "error"})</p>
<p>@Html.ValidationMessageFor(model => model.Description, "", new { @class = "error"})</p>
<p>@Html.ValidationMessageFor(model => model.Condition, "", new {@class = "error"})</p>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description)
    <br>
    <span>
    @Html.RadioButtonFor(model => model.Condition, "Operational") Operational</span>
    <span>
    @Html.RadioButtonFor(model => model.Condition, "Malfunctioning") Malfunctioning</span>
    <span>
    @Html.RadioButtonFor(model => model.Condition, "Being Repaired") Being Repaired</span>
    <br>
    <input type="submit" value="Update Information">
}

<hr>

<p>@Html.ActionLink($"Back to {@Model.Name}'s Detail Page","Details", new {id = @Model.MachineId})</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>